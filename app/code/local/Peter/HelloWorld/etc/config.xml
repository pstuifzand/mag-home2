<?xml version="1.0"?>
<config>
    <modules>
        <Peter_HelloWorld>
            <version>
                0.1.0
            </version>
        </Peter_HelloWorld>
    </modules>
    <global>
        <helpers>
            <Peter_HelloWorld>
                <class>Peter_HelloWorld_Helper</class>
            </Peter_HelloWorld>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <helloworld_options>
                                            <title>Store Hello World Module Section</title>
                                        </helloworld_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>

