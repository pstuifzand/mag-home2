<?xml version="1.0"?>
<config>
    <modules>
        <Peter_Week3>
            <version>0.1.15</version>
        </Peter_Week3>
    </modules>
    <global>
        <helpers>
            <peter_week3>
                <class>Peter_Week3_Helper</class>
            </peter_week3>
        </helpers>
        <blocks>
            <week3>
                <class>Peter_Week3_Block</class>
            </week3>
            <page>
                <rewrite>
                    <html_breadcrumbs>Peter_Week3_Block_Html_Breadcrumbs</html_breadcrumbs>
                </rewrite>
            </page>
        </blocks>
        <events>
            <salesrule_rule_condition_combine>
                <observers>
                    <peter_week3_sales_rule_condition_combine>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>saleRuleConditionCombine</method>
                    </peter_week3_sales_rule_condition_combine>
                </observers>
            </salesrule_rule_condition_combine>

            <sales_quote_remove_item>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>eventRemoveSalesQuoteItem</method>
                    </peter_week3_model_observer>
                </observers>
            </sales_quote_remove_item>
            <sales_quote_add_item>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>eventAddSalesQuoteItem</method>
                    </peter_week3_model_observer>
                </observers>
            </sales_quote_add_item>

            <checkout_cart_product_add_after>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>afterProductAdd</method>
                    </peter_week3_model_observer>
                </observers>
            </checkout_cart_product_add_after>
            <checkout_cart_product_update_after>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>afterUpdateProduct</method>
                    </peter_week3_model_observer>
                </observers>
            </checkout_cart_product_update_after>
            <checkout_cart_update_items_after>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>afterUpdateItems</method>
                    </peter_week3_model_observer>
                </observers>
            </checkout_cart_update_items_after>
            <checkout_cart_update_items_before>
                <observers>
                    <peter_week3_model_observer>
                        <type>singleton</type>
                        <class>Peter_Week3_Model_Observer</class>
                        <method>beforeUpdateItems</method>
                    </peter_week3_model_observer>
                </observers>
            </checkout_cart_update_items_before>


        </events>
        <models>
            <week3>
                <class>Peter_Week3_Model</class>
                <resourceModel>week3_resource</resourceModel>
            </week3>
            <week3_resource>
                <class>Peter_Week3_Model_Resource</class>
                <entities>
                    <comment>
                        <table>week3_comment</table>
                    </comment>
                    <indexer_comment>
                        <table>week3_indexer_comment</table>
                    </indexer_comment>
                    <comment2_entity>
                        <table>week3_comment2_entity</table>
                    </comment2_entity>
                    <comment2_entity_datetime>
                        <table>week3_comment2_entity_datetime</table>
                    </comment2_entity_datetime>
                    <comment2_entity_decimal>
                        <table>week3_comment2_entity_decimal</table>
                    </comment2_entity_decimal>
                    <comment2_entity_int>
                        <table>week3_comment2_entity_int</table>
                    </comment2_entity_int>
                    <comment2_entity_text>
                        <table>week3_comment2_entity_text</table>
                    </comment2_entity_text>
                    <comment2_entity_varchar>
                        <table>week3_comment2_entity_varchar</table>
                    </comment2_entity_varchar>
                    <comment2_entity_char>
                        <table>week3_comment2_entity_char</table>
                    </comment2_entity_char>
                </entities>
            </week3_resource>
            <catalogsearch_resource>
                <rewrite>
                    <fulltext>Peter_Week3_Model_Resource_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_resource>
        </models>
        <resources>
            <comment_setup>
                <setup>
                    <module>Peter_Week3</module>
                </setup>
            </comment_setup>
            <product_week3_setup>
                <setup>
                    <module>Peter_Week3</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </product_week3_setup>
            <comment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </comment_write>
            <comment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </comment_read>
            <comment2_setup>
                <setup>
                    <module>Peter_Week3</module>
                    <class>Peter_Week3_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </comment2_setup>
        </resources>
        <index>
            <indexer>
                <comment_indexer>
                    <model>week3/indexer_comment</model>
                </comment_indexer>
            </indexer>
        </index>
    </global>
    <frontend>
        <routers>
            <week3>
                <use>standard</use>
                <args>
                    <module>Peter_Week3</module>
                    <frontName>week3</frontName>
                </args>
            </week3>
            <checkout>
                <args>
                    <modules>
                        <Peter_Week3 before="Mage_Checkout">Peter_Week3_Checkout</Peter_Week3>
                    </modules>
                </args>
            </checkout>
        </routers>  
        <layout>
            <updates>
                <week3>
                    <file>peter_week3.xml</file>
                </week3>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <peter_comments before="Mage_Adminhtml">Peter_Week3_Adminhtml</peter_comments>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <week3>
                    <file>week3.xml</file>
                </week3>
            </updates>
        </layout>
    </adminhtml>
</config>
