<?xml version="1.0"?>
<config>
    <modules>
        <Peter_Week3>
            <version>0.1.3</version>
        </Peter_Week3>
    </modules>
    <global>
        <helpers>
            <peter_week3>
                <class>Peter_Week3_Helper</class>
            </peter_week3>
        </helpers>
        <blocks>
            <week3>
                <class>Peter_Week3_Block</class>
            </week3>
            <page>
                <rewrite>
                    <html_breadcrumbs>Peter_Week3_Block_Html_Breadcrumbs</html_breadcrumbs>
                </rewrite>
            </page>
        </blocks>
        <models>
            <week3>
                <class>Peter_Week3_Model</class>
                <resourceModel>week3_resource</resourceModel>
            </week3>
            <week3_resource>
                <class>Peter_Week3_Model_Resource</class>
                <entities>
                    <comment>
                        <table>week3_comment</table>
                    </comment>
                </entities>
            </week3_resource>
        </models>
        <resources>
            <comment_setup>
                <setup>
                <module>Peter_Week3</module>
                </setup>
            </comment_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <week3>
                <use>standard</use>
                <args>
                    <module>Peter_Week3</module>
                    <frontName>week3</frontName>
                </args>
            </week3>
        </routers>  
        <layout>
            <updates>
                <week3>
                    <file>peter_week3.xml</file>
                </week3>
            </updates>
        </layout>
    </frontend>
</config>
